class Person {
    int age, height; 
    static int totalPersons = 0;

    // Static method
    public static void havingFun() {
        System.out.println("having fun");
    }

    // Constructor
    Person(int a, int h) {
        age = a;
        height = h;
        totalPersons += 1;
    }
}

 public class statictopic {
    public static void main(String args[]) {
        
        Person P1 = new Person(21, 165);
        Person P2 = new Person(53, 160);

       
        System.out.println("P1.totalPersons: " + P1.totalPersons);
        System.out.println("P2.totalPersons: " + P2.totalPersons);
        Person.havingFun();
        P1.havingFun();
    }
}
